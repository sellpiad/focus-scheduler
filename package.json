{
  "author": "devsun",
  "description": "Control your focus.",
  "name": "focus-scheduler",
  "version": "1.0.1",
  "private": true,
  "homepage": "./",
  "dependencies": {
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/express": "^4.17.21",
    "axios": "^1.7.7",
    "bootstrap": "^5.3.3",
    "bootstrap-icons": "^1.11.3",
    "express": "^4.21.1",
    "focus-scheduler": "file:",
    "gapi-script": "^1.2.0",
    "googleapis": "^144.0.0",
    "react": "^18.3.1",
    "react-bootstrap": "^2.10.5",
    "react-dom": "^18.3.1",
    "react-icons": "^5.3.0",
    "react-mobile-picker": "^1.0.1",
    "react-scripts": "5.0.1",
    "web-vitals": "^2.1.4"
  },
  "main": "build/dist/main.js",
  "build": {
    "appId": "com.devsun.scheduler",
    "productName": "focus-scheduler",
    "files": [
      "build/**/*",
      "src/**/*",
      "build/dist/main.js"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "copy-files": "copyfiles -u 2 src/electron/preload.js build/dist/",
    "electron": "tsc && npm run copy-files && cross-env NODE_ENV=development electron .",
    "dist": "electron-builder -c.extraMetadata.main=build/dist/main.js"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/gapi": "^0.0.47",
    "@types/gapi.auth2": "^0.0.61",
    "@types/node": "^22.7.5",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "electron": "^32.1.2",
    "electron-builder": "^25.1.8",
    "serve": "^14.2.4",
    "ts-node": "^10.9.2"
  }
}
